<h1>Listing portfolios</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Capital</th>
    <th>Invested</th>
    <th>Current Value</th>
    <th>Profit/loss</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @portfolios.each do |portfolio| %>
  <tr>
    <td><%= portfolio.name %></td>
    <td><%= portfolio.capital %></td>
    <td><%= portfolio.invested %></td>
    <td><%= portfolio.current_port_value %></td>
    <td><%= portfolio.port_profit_loss %></td>
    <td><%= link_to 'Show', portfolio, remote: true %></td>
    <td><%= link_to 'Trades', portfolio_trades_path(portfolio), remote: true %></td>
    <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
    <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Portfolio', new_portfolio_path, id: "new_portfolio", remote: true %>
